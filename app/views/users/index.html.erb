<h1>Users index</h1>
<div class="users-container">
  <% @users.each do |user| %>
    <div class="user-card">
       <%= image_tag("user.webp", :class => "user-image", :alt => "user-image") %>
      <div class="user-data">
        <h1><%= user.name %></h1>
        <span>Number of posts: <%= user.posts_counter %></span>
      </div>
    </div>
  <% end %>
</div>
