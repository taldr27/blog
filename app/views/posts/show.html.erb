<div class="posts-container">
  <div class="post-data">
    <div class="post-title">
      <h2>Post #<%= @post.id %> by <%=@user.name%></h2>
      <span>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></span>
    </div>
    <h4><%= @post.title %><h4>
    <p><%= @post.text %></p>
  </div>
  <%= render "shared/add_like"%>
  <%= button_to 'Delete Post', post_path(@post.id), method: :delete, data: {turbo_method: :delete} %>
  <div class="comments-container">
    <% @comments.each do |comment| %>
      <% if comment.post_id == @post.id %>
      <h4>Username:<%= comment.user.name %> => <%= comment.text %></h4>
      <%= button_to 'Delete comment', comment_path(comment.id), method: :delete, data: {turbo_method: :delete} %>
      <%end%>
    <% end %>
  </div>
 <%= render "shared/add_comment"%>
</div>