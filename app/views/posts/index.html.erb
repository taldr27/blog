<h1>Posts are coming soon!</h1>
 <%= render "shared/user_data"%>
 <div class="posts-container">
  <% @latest_posts.each_with_index do |post, index| %>
    <%= link_to post_show_path(:id => post.id), :class => 'post-button' do %>
      <div class="post-card">
        <h2>Post <%= index + 1 %></h2>
        <p><%= post.text %></p>
        <span>Comments: <%= post.comments_counter %></span>
        <span>Likes: <%= post.likes_counter %></span>
      </div>
      <% post.reload %>
        <% if post.recent_comments.length > 0 %>
          <div class="comments-container">
            <% post.recent_comments.each do |comment| %>
              <h4><%= comment.author_id %>:<%= comment.text %></h4>
            <% end %>
          </div>
        <%end%>
    <% end %>
  <% end %>
 </div>